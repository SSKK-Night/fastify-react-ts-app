generator client {
  provider = "prisma-client-js"
}

datasource db1 {
  provider = "postgresql"
  url      = env("DATABASE_URL_NODE1")
}

datasource db2 {
  provider = "postgresql"
  url      = env("DATABASE_URL_NODE2")
}

datasource db3 {
  provider = "postgresql"
  url      = env("DATABASE_URL_NODE3")
}

model User {
  uuid           String  @id @default(uuid())
  nodeid         Int
  name           String
  email          String  @unique
  disabilityName String?
  gender         String
  delete_flag    Boolean @default(false)
  isActive       Boolean @default(true)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@unique([email])
}
